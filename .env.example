# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# Application URL
REACT_APP_BASE_URL=http://localhost:3000

# Google Drive API Configuration
# Obtener estas claves desde Google Cloud Console > APIs & Services > Credentials
# 1. Crear un proyecto en Google Cloud Console
# 2. Habilitar Google Drive API
# 3. Crear credenciales (API Key y OAuth 2.0 Client ID)
REACT_APP_GOOGLE_DRIVE_API_KEY=your_google_api_key_here
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Google Drive API Scopes
REACT_APP_GOOGLE_DRIVE_SCOPE=https://www.googleapis.com/auth/drive.file

# Upload Configuration
REACT_APP_UPPY_MAX_FILE_SIZE=100000000
REACT_APP_UPPY_MAX_FILES=50

# Worker Configuration (opcional)
REACT_APP_WORKER_URL=your_worker_url
REACT_APP_ADMIN_DELETE_TOKEN=your_admin_token
